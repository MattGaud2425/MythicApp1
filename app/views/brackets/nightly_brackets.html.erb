<h2>Nightly Tournaments</h2>

<div class="tourn-section tourn-fps-section">
	<% Bracket.preload(:game).all.each do |x| %>
	<div class="tourn-game-item tourn-fps-game-item">
		<div class="row tourn-game-header tourn-fps-game-header">
	    <div class="col-12 tourn-game-header-content"><%= x.game.short_title %> | <%= x.tournament_type %> </div>
	  </div>
		<div class="row">
			<div class="col-2 tourn-item tourn-item-label-box">
				<div class="tourn-item-fps tourn-img-placing-fps tourn-item-1">
					<%= image_tag x.game.game_img.url(:l), class: "tourn-img" %>
				</div>
				<div class="tourn-item-game-box">
					<%= x.game.short_title %><br>
					<%= x.title %>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-part1">
					<div class="tourn-label">Free</div>
				</div>
				<div class="tourn-item-part2">
					<div class="current-players-item">Current Players: <br>
						<div class="current-players-total"><strong>Number</strong></div>
					</div>
					<div class="brackets-filled-item">Brackets Filled: <br>
						<div class="brackets-filled-total"><strong>Number</strong></div>
					</div>
					<div class="prize-pool"><button class="prize-pool-button fps-button"> Prize Pool </button>
					</div>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-part1">
					<div class="tourn-label">$10</div>
				</div>
				<div class="tourn-item-part2">
					<div class="current-players-item">Current Players: <br>
						<div class="current-players-total"><strong>Number</strong></div>
					</div>
					<div class="brackets-filled-item">Brackets Filled: <br>
						<div class="brackets-filled-total"><strong>Number</strong></div>
					</div>
					<div class="prize-pool"><button class="prize-pool-button fps-button"> Prize Pool </button></div>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-part1">
					<div class="tourn-label">$25</div>
				</div>
				<div class="tourn-item-part2">
					<div class="current-players-item">Current Players: <br>
						<div class="current-players-total"><strong>Number</strong></div>
					</div>
					<div class="brackets-filled-item">Brackets Filled: <br>
						<div class="brackets-filled-total"><strong>Number</strong></div>
					</div>
					<div class="prize-pool"><button class="prize-pool-button fps-button"> Prize Pool </button></div>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-part1">
					<div class="tourn-label">$100</div>
				</div>
				<div class="tourn-item-part2">
					<div class="current-players-item">Current Players: <br>
						<div class="current-players-total"><strong>Number</strong></div>
					</div>
					<div class="brackets-filled-item">Brackets Filled: <br>
						<div class="brackets-filled-total"><strong>Number</strong></div>
					</div>
					<div class="prize-pool"><button class="prize-pool-button fps-button"> Prize Pool </button></div>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-part1">
					<div class="tourn-label">Total Players</div>
				</div>
				<div class="tourn-item-part2">
					<div class="current-players-item">Current Players: <br>
						<div class="current-players-total"><strong>Number</strong></div>
					</div>
					<div class="brackets-filled-item">Brackets Filled: <br>
						<div class="brackets-filled-total"><strong>Number</strong></div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-2 tourn-item tourn-item-fps">
				<div class="tourn-item-console-box">
					Consoles: <br>
					<%= image_tag("xb1img1.png", class: "tourn-console-img", height: "35", width: "35") %>
					<%= image_tag("ps4svg1.svg", class: "tourn-console-img", height: "35", width: "35") %>
					<i class="fa fa-steam fa-lg tourn-console-img" style="height: 20; width: 20;"></i>
					<i class="fa fa-globe fa-lg tourn-console-img" style="height: 20; width: 20;"></i>
				</div>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">Free <br>
					<button class="join-bracket-button fps-button">
						<% x.bracket_pools.where(title: "nightly_free").each do |y| %>
					    <%= y.title %> <br>
					    <%= button_to "Join Bracket", join_bracket_path(bracket_pool_id: y.id) %>
					  <% end %>
					</button>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">$10 <br>
				<% x.bracket_pools.where(title: "nightly_10").each do |y| %>
					<%= y.title %> <br>
					<%= button_to "Join Bracket", join_bracket_path(bracket_pool_id: y.id) %>
				<% end %>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">$25 <br>
				<% x.bracket_pools.where(title: "nightly_25").each do |y| %>
					<%= y.title %> <br>
					<%= button_to "Join Bracket", join_bracket_path(bracket_pool_id: y.id) %>
				<% end %>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">$100 <br>
				<% x.bracket_pools.where(title: "nightly_100").each do |y| %>
					<%= y.title %> <br>
					<%= button_to "Join Bracket", join_bracket_path(bracket_pool_id: y.id) %>
				<% end %>
			</div>
			<div class="col-2 tourn-item tourn-item-fps">Maps and Gametypes <br>
				Rules and Settings
			</div>
		</div>
	</div><!-- tourn-section tourn-fps-section -->
	<% end %>

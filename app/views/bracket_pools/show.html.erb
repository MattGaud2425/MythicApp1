
<% current_user.player.bracket_pools.all.each do |x| %>
  Bracket Pool title: <%= x.title %> <br>
  Bracket Pool name: <%= x.name %> <br>
  Bracket Pool ID: <%= x.id %> <br>
  Bracket Title: <%= x.bracket.title %> <br>
  Bracket ID: <%= x.bracket.id %> <br>
  <% x.bracket_pool_players.each do |y| %>
